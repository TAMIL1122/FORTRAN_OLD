! PROGRAM FOR RUNGE-KUTTA METHOD
REAL X0,Y0,H
WRITE(*,*)'ENTER THE INITIAL VALUE X0,Y0'
READ(*,*)X0,Y0
WRITE(*,*)'ENTER THE VALUE OF H'
READ(*,*)H
WRITE(*,*)'NUMBER OF ITERATION SHOULD'
READ(*,*)N
DO 15 I=1,N
AK1=H*CALC(X0,Y0)
AK2=H*CALC(X0+H/2.0,Y0+AK1/2.0)
AK3=H*CALC(X0+H/2.0,Y0+AK2/2.0)
AK4=H*CALC(X0+H,Y0+AK3)
AK=(1.0/6.0)*(AK1+2*AK2+2*AK3+AK4)
X1=X0+H
Y1=Y0+AK
X0=X1
Y0=Y1
WRITE(*,*)'THE VALUE OF X AND Y'
WRITE(*,2)X1,Y1
2 FORMAT(2F15.4)
15 CONTINUE
STOP
END 
FUNCTION CALC(X0,Y0)
CALC=Y0+X0
RETURN
END